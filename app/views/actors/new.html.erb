 <%= form_for @actor, url: actors_path, method: :post do |f| %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </div>
  <div>
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date %>
  </div> 
  <div>
    <%= f.label :birth_place %>
    <%= f.text_field :birth_place %>
  </div>
  <div>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>
